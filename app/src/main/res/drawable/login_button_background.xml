<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#30AAFF"
                android:endColor="#2AD0FF"
                android:centerX="80%"/>
            <corners
                android:radius="30dp" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#209AEF"
                android:endColor="#1AC0EF"
                android:centerX="80%"/>
            <corners
                android:radius="40dp" />
        </shape>
    </item>

</selector>